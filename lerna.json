{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventionalcommits",
        "header": "<div align=\"center\"><h1>\uD83D\uDCDD Changelog</h1><p>All changes of this package will be documented in this file.</p></div>\n\n---\n",
        "types": [
          {"type": "feat", "section": "✨ Features"},
          {"type": "fix", "section": "\uD83D\uDC1B Bug Fixes"},
          {"type": "chore", "section": "👨‍💻 Chores"},
          {"type": "docs", "section": "\uD83D\uDCDD Docs"},
          {"type": "refactor", "section": "♻️Refactors"},
          {"type": "test", "section": "🧪 Tests"},
          {"type": "build", "section": "🛠 Build"},
          {"type": "perf", "hidden": true},
          {"type": "style", "hidden": true},
          {"type": "ci", "hidden": true},
          {"type": "revert", "hidden": true}
        ],
        "issuePrefixes": ["#"]
      }
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"],
      "includeMergedTags": true,
      "message": "ci(release): publish packages"
    }
  }
}
