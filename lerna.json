{
  "$schema": "https://json.schemastore.org/lerna",
  "changelogPreset": "conventional-changelog-conventionalcommits",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true
    },
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master"],
      "includeMergedTags": true,
      "message": "ci(release): publish packages"
    }
  }
}
